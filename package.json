{
  "name": "sistem-akademik-root",
  "private": true,
  "version": "1.0.0",
  "description": "Bhayangkara Student Management System (BSMS) â€” SPN Purwokerto",
  "author": "SPN Purwokerto",
  "main": "app/electron/main.js",
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.0"
  },
  "scripts": {
    "dev:renderer": "npm --prefix app/renderer run dev",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development RENDERER_URL=http://localhost:5173 npm --prefix app/electron run dev",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "npm --prefix app/renderer run build",
    "dist:win": "npm run build:renderer && electron-builder -w -p never",
    "dist": "npm run build:renderer && electron-builder",
    "clean": "rimraf dist app/renderer/dist || rmdir /s /q dist app\\renderer\\dist"
  },
  "build": {
    "appId": "id.bsms.spn.purwokerto",
    "productName": "BSMS SPN Purwokerto",
    "files": [
      "app/electron/**",
      "app/electron/assets/**",
      "app/renderer/dist/**",
      "!server/**",
      "!**/*.map"
    ],
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "app/electron/assets"
    },
    "win": {
      "icon": "app/electron/assets/bsms.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BSMS SPN Purwokerto"
    }
  }
}
